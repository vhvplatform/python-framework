# SaaS Framework - Production Environment Configuration
# Copy this file to .env for production deployment
# IMPORTANT: Update all sensitive values and keep secure!

# ==============================================================================
# Application Settings
# ==============================================================================
APP_NAME="SaaS Framework"
ENVIRONMENT="production"
DEBUG=false
LOG_LEVEL="INFO"

# ==============================================================================
# API Configuration
# ==============================================================================
API_HOST="0.0.0.0"
API_PORT="8000"
API_VERSION="v1"

# ==============================================================================
# Database Configuration
# ==============================================================================
# PostgreSQL connection URL (USE SECURE CREDENTIALS!)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL="postgresql+asyncpg://user:CHANGE_ME@db-host:5432/saas_prod"

# Database pool settings (tuned for production)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_ECHO=false

# ==============================================================================
# Redis Configuration
# ==============================================================================
# Redis connection URL (USE SECURE CREDENTIALS IF AUTH ENABLED!)
# Format: redis://[:password@]host:port/db
REDIS_URL="redis://:CHANGE_ME@redis-host:6379/0"

# Redis settings
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

# ==============================================================================
# Authentication & Security
# ==============================================================================
# JWT Configuration (MUST CHANGE!)
# Generate a strong secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY="CHANGE_ME_USE_STRONG_SECRET"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (Production - be specific!)
# Comma-separated list of allowed origins
CORS_ALLOW_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,PATCH"
CORS_ALLOW_HEADERS="*"

# ==============================================================================
# Message Queue Configuration (Optional)
# ==============================================================================
# RabbitMQ (USE SECURE CREDENTIALS!)
RABBITMQ_URL="amqp://user:CHANGE_ME@rabbitmq-host:5672/"

# Kafka
KAFKA_BOOTSTRAP_SERVERS="kafka-host:9092"

# ==============================================================================
# Observability
# ==============================================================================
# Metrics
ENABLE_METRICS=true
METRICS_PORT="9090"

# Tracing
ENABLE_TRACING=true
JAEGER_AGENT_HOST="jaeger-agent"
JAEGER_AGENT_PORT="6831"

# Logging
LOG_FORMAT="json"
LOG_OUTPUT="stdout"

# ==============================================================================
# Feature Flags
# ==============================================================================
ENABLE_API_DOCS=false
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true

# ==============================================================================
# Production Settings
# ==============================================================================
# Auto-reload disabled in production
RELOAD=false

# Hide error details in production
SHOW_ERROR_DETAILS=false

# Worker settings
WORKERS=4
