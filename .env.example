# SaaS Framework - Development Environment Configuration
# Copy this file to .env and update values as needed
# DO NOT commit .env file with sensitive data to version control

# ==============================================================================
# Application Settings
# ==============================================================================
APP_NAME="SaaS Framework Dev"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="DEBUG"

# ==============================================================================
# API Configuration
# ==============================================================================
API_HOST="0.0.0.0"
API_PORT="8000"
API_VERSION="v1"

# ==============================================================================
# Database Configuration
# ==============================================================================
# PostgreSQL connection URL
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/saas_db"

# Database pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false

# ==============================================================================
# Redis Configuration
# ==============================================================================
# Redis connection URL
# Format: redis://host:port/db
REDIS_URL="redis://localhost:6379/0"

# Redis settings
REDIS_MAX_CONNECTIONS=10
REDIS_DECODE_RESPONSES=true

# ==============================================================================
# Authentication & Security
# ==============================================================================
# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY="dev-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (Development - allow all)
CORS_ALLOW_ORIGINS="*"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="*"
CORS_ALLOW_HEADERS="*"

# ==============================================================================
# Message Queue Configuration (Optional)
# ==============================================================================
# RabbitMQ
RABBITMQ_URL="amqp://guest:guest@localhost:5672/"

# Kafka
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"

# ==============================================================================
# Observability
# ==============================================================================
# Metrics
ENABLE_METRICS=true
METRICS_PORT="9090"

# Tracing
ENABLE_TRACING=false
JAEGER_AGENT_HOST="localhost"
JAEGER_AGENT_PORT="6831"

# ==============================================================================
# Feature Flags
# ==============================================================================
ENABLE_API_DOCS=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=false

# ==============================================================================
# Development Tools
# ==============================================================================
# Auto-reload on code changes
RELOAD=true

# Show detailed error pages
SHOW_ERROR_DETAILS=true
